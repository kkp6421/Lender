<div id="to_white">
  <h5>詳細</h5><br/>
  <table class="collection">
    <tr class="collection-item">
      <th><i class="material-icons">format_list_numbered</i><label>ISBN</label></th>
      <td><%= @book.ISBN %></td>
    </tr>
    <tr class="collection-item">
      <th><i class="material-icons">book</i><label>書籍名</label></th>
      <td><%= @book.name %></td>
    </tr>
    <tr class="collection-item">
      <th><i class="material-icons">people</i><label>著者</label></th>
      <td><%= @book.author %></td>
    </tr>
    <tr class="collection-item">
      <th><i class="material-icons">location_city</i><label>出版社</label></th>
      <td><%= @book.publisher %></td>
    </tr>
    <tr class="collection">
      <th></th><td></td>
    </tr>
  </table>
  <%= link_to "Edit this book", edit_book_path, class: "btn" %>
  <%= link_to "delete this book", @book, class: "btn red", method: :delete,
              data: { confirm: "You sure?" }%>
</div>