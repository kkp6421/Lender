<% if owner_signed_in? %>
  <h5>詳細</h5><br/>
  <table class="collection">
      <tr class="collection-item">
        <th><i class="material-icons">format_list_numbered</i>ISBN</th>
        <td><%= @book.ISBN %></td>
      </tr>
      <tr class="collection-item">
        <th><i class="material-icons">book</i>Name</th>
        <td><%= @book.name %></td>
      </tr>
      <tr class="collection-item">
        <th><i class="material-icons">people</i>Author</th>
        <td><%= @book.author %></td>
      </tr>
      <tr class="collection-item">
        <th><i class="material-icons">location_city</i>Publisher</th>
        <td><%= @book.publisher %></td>
      </tr>
      <tr class="collection">
        <th></th><td></td>
      </tr>
  </table>
  <%= link_to "Edit this book", edit_book_path, class: "btn" %>
  <%= link_to "delete this book", @book, class: "btn red", method: :delete,
                                              data: { confirm: "You sure?" }%>

<% end %>