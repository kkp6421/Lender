<% if owner_signed_in? %>
  <h5>
    <%= link_to 'ログアウト', destroy_owner_session_path, method: :delete %><br/>
    <%= link_to 'オーナー情報変更', edit_owner_registration_path %>
  </h5><br/><br/>
  <h5>Books List</h5>
  <div class="collection">
    <% @books.each do |book| %>
      <%= link_to(book) do %>
        <%= link_to(book, class: "collection-item") do %>
          <%= book.name %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <br/>
  <%= will_paginate @books %>
<% end %>
